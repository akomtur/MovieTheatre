<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
        <RelativeLayout
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="#0b8b7b"
            android:elevation="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_title"
                android:text="title"
                android:paddingLeft="@dimen/detail_view_padding_left"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/detail_view_padding_left"
                android:src="@drawable/btn_star_big_off"
                android:layout_alignTop="@+id/detail_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/detail_view_padding_top"
            android:paddingLeft="@dimen/detail_view_padding_left"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/detail_view_padding_left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_release_year"
                    android:text=""
                    android:textSize="24dp"
                    android:padding="4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_duration"
                    android:text=""
                    android:textSize="16dp"
                    android:textStyle="italic"
                    android:padding="4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_vote"
                    android:text=""
                    android:padding="4dp"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_description"
            android:text=""
            android:paddingLeft="@dimen/detail_view_padding_left"
            android:paddingTop="@dimen/detail_view_padding_top"
            android:paddingRight="16dp" />
        <View
            android:paddingTop="@dimen/detail_view_padding_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/detail_view_padding_top"
            android:paddingLeft="@dimen/detail_view_padding_left"
            android:text="Trailers:"/>
        <LinearLayout
            android:id="@+id/detail_video_list"
            android:paddingLeft="@dimen/detail_view_padding_left"
            android:paddingTop="@dimen/detail_view_padding_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
        <View
            android:paddingTop="@dimen/detail_view_padding_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:text="Reviews:"
            android:paddingTop="@dimen/detail_view_padding_top"
            android:paddingLeft="@dimen/detail_view_padding_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/detail_review_list"
            android:paddingLeft="@dimen/detail_view_padding_left"
            android:paddingTop="@dimen/detail_view_padding_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>




